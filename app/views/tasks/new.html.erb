<h2>Create a Task 💐</h2>
<%= form_with(model:@tasks) do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %><br>
<br>
  <%= form.label :details %>
  <%= form.text_area :details %><br>
<br>
  <%= form.label :completed %>
  <%= form.check_box :completed %><br>
<br>
  <%= form.submit %>
<%end%>

<%= link_to "Go home", tasks_path %>
